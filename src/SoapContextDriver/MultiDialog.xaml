<Window x:Class="SoapContextDriver.MultiDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SoapContextDriver"            
    DataContext="{Binding}"
    Title="SOAP Data Services Connection"
    Width="525" Height="350"
    WindowStartupLocation="CenterScreen"
    d:DataContext="{d:DesignInstance Type=local:MultiDialogViewModel, IsDesignTimeCreatable=False}"
    FocusManager.FocusedElement="{Binding ElementName=UriComboBox}"                
    >
   
    <!--Loaded="MultiDialog_OnLoaded"-->
    <!--d:DataContext="{d:DesignInstance Type=local:MultiDialogViewModel, IsDesignTimeCreatable=False}"-->
    <Window.Resources>
        <Style x:Key="ServiceBindngsStyle" TargetType="ListBox">
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem" >
                        <Setter Property="Margin" Value="4" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border Background="Transparent">
                                        <RadioButton GroupName="ServiceBindings"
                                                     IsHitTestVisible="False"
                                                     IsChecked="{TemplateBinding IsSelected}">
                                            <ContentPresenter />
                                        </RadioButton>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <DataGrid 
            Grid.Row="0"
            ItemsSource="{Binding Connections}" 
            AutoGenerateColumns="False" 
            CanUserAddRows="True" 
            CanUserDeleteRows="True" 
            CanUserReorderColumns="False" 
            CanUserResizeRows="False" 
            CanUserResizeColumns="true"
            >
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Url" Binding="{Binding Url}" Width="*"/>
                <DataGridComboBoxColumn Header="Binding" ItemsSource="{Binding Bindings}" SelectedItemBinding="{Binding BindingName}" />
                <DataGridTextColumn Header="Namespace" Binding="{Binding NamespaceName}"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button IsCancel="True">Abbrechen</Button>
            <Button IsDefault="True">Speichern</Button>
        </StackPanel>
    </Grid>

